/* compress.wxss */
.container {
  padding: 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background: #f8f8f8;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.header {
  margin-bottom: 0;
  text-align: center;
  width: 100%;
  position: absolute;
  top: 30rpx;
  left: 0;
  right: 0;
  z-index: 1;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.desc {
  font-size: 28rpx;
  color: #666;
}

.upload-section {
  width: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
}

.upload-btn {
  width: 240rpx;
  height: 240rpx;
  background: #fff;
  border: 2rpx dashed #3cc51f;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 15rpx rgba(60, 197, 31, 0.1);
  transition: all 0.3s;
}

.upload-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(60, 197, 31, 0.1);
}

.upload-icon {
  font-size: 80rpx;
  color: #3cc51f;
  line-height: 1;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #3cc51f;
  font-weight: 500;
}

/* 有图片时的内容样式 */
.content-with-image {
  width: 100%;
  padding-top: 120rpx; /* 为顶部标题留出空间 */
}

.image-preview {
  margin: 30rpx 0;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
}

.image-preview .preview-img {
  width: 100%;
  max-height: 400rpx;
  display: block;
  margin: 0 auto;
}

.image-info {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.compress-controls {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx 20rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
}

.quality-text {
  font-size: 28rpx;
  color: #333;
  display: block;
  text-align: center;
  margin-top: 20rpx;
}

.btn-row {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin: 20rpx 0;
}

.btn {
  padding: 20rpx 0;
  font-size: 30rpx;
  border-radius: 10rpx;
  flex: 1;
  margin: 0 10rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.primary {
  background: #3cc51f;
  color: #fff;
}

.secondary {
  background: #f2f2f2;
  color: #666;
  border: 1rpx solid #ddd;
}

.results {
  width: 100%;
  margin-top: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 新增比较视图样式 */
.comparison-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx dashed #eee;
}

.comparison-item {
  width: 45%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.comparison-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.comparison-image {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  border-radius: 8rpx;
  background: #f8f8f8;
}

.comparison-image .comparison-img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.comparison-info {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.comparison-arrow {
  font-size: 36rpx;
  color: #3cc51f;
  font-weight: bold;
}

/* 新增大小详情样式 */
.size-detail {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  border-left: 6rpx solid #3cc51f;
}

.size-info-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.size-info-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.size-info-text.highlight {
  color: #3cc51f;
  font-weight: bold;
  margin-top: 8rpx;
}

/* 压缩摘要样式 */
.compress-summary {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.summary-item:last-child {
  border-bottom: none;
}

.summary-title {
  font-size: 28rpx;
  color: #666;
}

.summary-content {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.highlight .summary-title {
  color: #3cc51f;
  font-weight: bold;
}

.highlight .summary-content {
  color: #3cc51f;
  font-weight: bold;
}

.save-btn {
  margin-top: 30rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 26rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #666;
}

.info-value {
  color: #333;
  font-weight: 500;
} 