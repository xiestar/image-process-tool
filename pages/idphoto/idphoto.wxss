/* idphoto.wxss */
.container {
  padding: 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background: #f8f8f8;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: flex-start;
}

.header {
  margin-bottom: 20rpx;
  width: 100%;
  text-align: center;
}

.title-row {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.tip-btn {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #3cc51f;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 16rpx;
}

.desc {
  font-size: 28rpx;
  color: #666;
}

.type-tabs {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  overflow: hidden;
  width: 100%;
  position: relative;
  top: -10rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #3cc51f;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background: #3cc51f;
  border-radius: 2rpx;
}

.color-selector {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  width: 100%;
  position: relative;
  top: -10rpx;
}

.color-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.color-options {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.color-item {
  width: 70rpx;
  height: 70rpx;
  border-radius: 8rpx;
  border: 2rpx solid #ddd;
  margin-bottom: 10rpx;
  position: relative;
}

.color-item.active::after {
  content: '';
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #3cc51f;
  border: 2rpx solid #fff;
}

.upload-section {
  width: 100%;
  margin: 0;
  position: relative;
  top: -10rpx;
}

.upload-btn {
  width: 100%;
  height: 220rpx;
  background: #fff;
  border: 2rpx dashed #3cc51f;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 15rpx rgba(60, 197, 31, 0.1);
}

.upload-icon {
  font-size: 80rpx;
  color: #3cc51f;
  line-height: 1;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #3cc51f;
  font-weight: 500;
}

.image-preview {
  margin: 20rpx 0;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  min-height: 100rpx;
}

.preview-title {
  font-size: 32rpx;
  color: #444;
  margin-bottom: 16rpx;
  font-weight: 500;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.photo-size-label {
  font-size: 26rpx;
  color: #3cc51f;
  margin-top: 8rpx;
  font-weight: normal;
}

.image-preview image {
  width: 100%;
  max-height: 300rpx;
  object-fit: contain;
  margin: 0 auto;
  display: block;
}

.process-btn, .save-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #3cc51f;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  margin: 20rpx 0;
}

.process-btn[disabled] {
  background: #b2e1a1;
  color: #fff;
}

.result-container {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-image-container {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
  padding: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.result-box {
  width: auto;
  display: inline-block;
  margin: 20rpx auto;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  text-align: center;
  background-color: #f8f8f8;
  line-height: 0;
}

.result-box image {
  display: block;
  object-fit: contain;
  margin: 0;
  padding: 0;
}

.photo-info {
  margin: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.photo-info text {
  font-size: 26rpx;
  color: #666;
  margin: 5rpx 0;
}

.main-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding: 0 30rpx;
  margin-top: 20rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin: 20rpx 0;
}

.reset-btn {
  background: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-radius: 40rpx;
  flex: 0.45;
  margin: 0 0 0 20rpx;
}

.process-btn {
  flex: 1;
  margin: 0;
  background: linear-gradient(135deg, #3cc51f, #2db400);
  font-weight: 500;
  letter-spacing: 2rpx;
  box-shadow: 0 4rpx 12rpx rgba(60, 197, 31, 0.3);
}

.crop-guide {
  margin-top: 20rpx;
  background: rgba(60, 197, 31, 0.1);
  border-radius: 8rpx;
  padding: 16rpx;
  width: 100%;
}

.crop-guide text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.crop-indicator {
  margin-top: 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
}

.crop-indicator text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.crop-indicator text:first-child {
  color: #3cc51f;
  font-weight: 500;
}

.photo-canvas {
  position: fixed;
  left: -9999px;
  top: -9999px;
  z-index: -999;
  opacity: 0;
  pointer-events: none;
}

/* 为一寸照和二寸照添加固定尺寸容器 */
.one-inch-container {
  width: 590rpx; /* 295px * 2 */
  height: 826rpx; /* 413px * 2 */
  margin: 0 auto;
  position: relative;
}

.two-inch-container {
  width: 600rpx; /* 约等于413px * 1.5缩放 */
  height: 840rpx; /* 约等于579px * 1.6缩放，保持比例 */
  margin: 0 auto;
  position: relative;
}

.settings-section {
  width: 100%;
  margin-bottom: 20rpx;
}

/* 功能提示样式 */
.feature-info {
  background: #f0f9ed;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
  position: relative;
  border-left: 8rpx solid #3cc51f;
}

.feature-title {
  font-size: 28rpx;
  color: #3cc51f;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 标签样式 */
.tab {
  padding: 12rpx 24rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  margin-right: 15rpx;
  transition: all 0.3s;
}

.tab.active {
  background: #3cc51f;
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(60, 197, 31, 0.3);
}

/* 操作提示区域 */
.operation-tip {
  background: #f0f9ed;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 16rpx 0;
  width: 100%;
  box-sizing: border-box;
  border-left: 8rpx solid #3cc51f;
}

.tip-title {
  font-size: 28rpx;
  color: #3cc51f;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.tip-content {
  display: flex;
  flex-direction: column;
}

.tip-content text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
} 