<!--index.wxml-->
<view class="container">
  <view class="title">图片综合处理工具</view>
  
  <view class="grid-container">
    <view class="grid-item" bindtap="navigateTo" data-page="compress">
      <view class="item-icon icon-compress">
        <text>🗜️</text>
      </view>
      <view class="item-text">图片压缩</view>
    </view>
    
    <view class="grid-item" bindtap="navigateTo" data-page="removebg">
      <view class="item-icon icon-removebg">
        <text>✂️</text>
      </view>
      <view class="item-text">抠图去背景</view>
    </view>
    
    <view class="grid-item" bindtap="navigateTo" data-page="recognize">
      <view class="item-icon icon-recognize">
        <text>👁️</text>
      </view>
      <view class="item-text">图片识别</view>
    </view>
    
    <view class="grid-item" bindtap="navigateTo" data-page="idphoto">
      <view class="item-icon icon-idphoto">
        <text>📷</text>
      </view>
      <view class="item-text">证件照制作</view>
    </view>
  </view>
</view>
